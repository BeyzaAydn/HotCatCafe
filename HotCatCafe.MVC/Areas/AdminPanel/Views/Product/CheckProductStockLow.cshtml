@model IEnumerable<HotCatCafe.BLL.ViewModels.ProductViewModels.ProductViewModel>
@{
    ViewData["Title"] = "CheckProductStockLow";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="container">
    <h1>Low Stock Products</h1>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Product ID</th>
                    <th>Stock</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.ProductId</td>
                        <td>@product.UnitInStock</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No products found with low stock.</p>
    }
</div>
