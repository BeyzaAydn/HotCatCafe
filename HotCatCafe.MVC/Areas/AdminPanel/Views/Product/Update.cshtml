<form method="post" enctype="multipart/form-data">
    <div class="card-body">
        <div class="form-group">
            <label asp-for="ProductName">Ürün Ad</label>
            <input type="text" class="form-control" asp-for="ProductName" placeholder="Ürün Adını Girin" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UnitPrice">Ürün Fiyat</label>
            <input type="number" class="form-control" asp-for="UnitPrice" placeholder="Ürün Fiyatını Girin" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UnitInStock">Ürün Stok</label>
            <input type="number" class="form-control" asp-for="UnitInStock" />
            <span asp-validation-for="UnitInStock" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId">Kategori</label>
            <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.CategoryListItem">
                <option selected="" disabled>Kategori Seçin</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status">Ürün Durumu</label>
            <input type="text" class="form-control" asp-for="Status" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Active">Aktiflik Durumu</label>
            <input type="text" class="form-control" asp-for="Active" />
            <span asp-validation-for="Active" class="text-danger"></span>
        </div>

         <div class="form-group">
           
            <input class="form-control" type="file" name="productImage" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div> 
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-dark">Güncelle</button>
    </div>
</form>







